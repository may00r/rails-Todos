$("#todo-modal").find(".modal-content").html("<%= j (render 'new') %>");
$("#todo-modal").modal('show');

$('#category').change( function () {
    var selected = $("option:selected", this).text();
    var url = '/projects/new';
    console.log(selected);
    if (selected == 'Новая категория...') {
        $('#submit_todo').addClass('disabled');
        $('#todo-modal').modal('hide');
        $('#project-modal__button')[0].click();
    } else {
        $('#submit_todo').removeClass('disabled');
    }
});

$('#cancel_todo').click( function (e) {
    e.preventDefault();
    $("#todo-modal").modal('hide');
});
